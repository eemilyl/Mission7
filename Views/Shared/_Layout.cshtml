<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <!--Here is one of my bootstrap requirements: Book Favicon -->
    <link rel="icon" href="~/img/64x64.png" sizes="16x16" type="image/png" />
</head>
<body>
    <div class="bg-dark text-white p-2">
        <div class="container">
            <div class="row">
                <div class="col navbar-brand">Bookstore</div>
                <div class="col-2 text-right">
                    <vc:basket-summary></vc:basket-summary>
                </div>
            </div>
        </div>
    </div>


    <div class="row m-1 p-1">
        <div id="types" class="col-3">
            <vc:categories></vc:categories>
        </div>

        <div class="col-9">
            <div>
                @RenderBody()
            </div>
        </div>
    </div>


</body>
</html>
